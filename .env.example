# Database Configuration (Azure Database for PostgreSQL)
DB_HOST=your-azure-postgres-server.postgres.database.azure.com
DB_PORT=5432
DB_USER=your-admin-user@your-azure-postgres-server
DB_PASSWORD=your-secure-password
DB_NAME=portal_produto

# Alternative: Full connection string (recommended for Azure)
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# JWT Configuration (generate a secure key)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Configuration
PORT=8080
NODE_ENV=production

# Azure specific
WEBSITE_NODE_DEFAULT_VERSION=18.17.0
